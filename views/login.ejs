<!doctype html>
<html lang="en">
<head>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <title>Careers · Recruitment Results</title>
  <link rel="stylesheet" href="/public/css/main.css">

  <style>
    /* Mobile Menu */
    .nav {
      display: flex;
      gap: 1rem;
    }

    .menu-btn {
      display: none;
      font-size: 1.5rem;
      background: none;
      border: none;
      cursor: pointer;
    }

    @media (max-width: 768px) {
      .nav {
        display: none;
        flex-direction: column;
        background: #fff;
        position: absolute;
        top: 60px;
        left: 0;
        right: 0;
        padding: 1rem;
        box-shadow: 0 4px 6px rgba(0,0,0,0.1);
      }
      .nav.active {
        display: flex;
      }
      .menu-btn {
        display: block;
      }
    }

    /* Popup Modal */
    .modal {
      display: none;
      position: fixed;
      z-index: 1000;
      left: 0; top: 0;
      width: 100%; height: 100%;
      background: rgba(0,0,0,0.5);
      justify-content: center;
      align-items: center;
    }
    .modal-content {
      background: #fff;
      padding: 20px;
      border-radius: 10px;
      text-align: center;
      width: 300px;
      box-shadow: 0 4px 8px rgba(0,0,0,0.2);
      animation: fadeIn 0.3s ease-in-out;
    }
    .modal-content h2 {
      margin: 0 0 10px;
      color: #d32f2f;
    }
    .close-btn {
      background: #d32f2f;
      color: #fff;
      border: none;
      padding: 10px 15px;
      border-radius: 6px;
      cursor: pointer;
      margin-top: 10px;
    }
    @keyframes fadeIn {
      from {opacity: 0; transform: scale(0.9);}
      to {opacity: 1; transform: scale(1);}
    }
  </style>

  <script>
    document.addEventListener("DOMContentLoaded", () => {
      const menuBtn = document.querySelector(".menu-btn");
      const nav = document.querySelector(".nav");
      const modal = document.getElementById("errorModal");
      const closeBtn = document.querySelector(".close-btn");

      // Mobile menu toggle
      menuBtn.addEventListener("click", () => {
        nav.classList.toggle("active");
        menuBtn.setAttribute(
          "aria-label",
          nav.classList.contains("active") ? "Close Menu" : "Open Menu"
        );
      });

      // Example login check (simulate invalid credentials)
      document.getElementById("loginForm")?.addEventListener("submit", function(e) {
        e.preventDefault();
        // Here you can check credentials with backend validation
        // If invalid:
        modal.style.display = "flex";
      });

      closeBtn.addEventListener("click", () => {
        modal.style.display = "none";
      });

      window.addEventListener("click", (e) => {
        if (e.target === modal) {
          modal.style.display = "none";
        }
      });
    });
  </script>
</head>
<body>
  <header class="header">
    <div class="topbar">
      <div class="brand">
        <img src="/public/img/logo.svg" alt="SBI logo">
        <div class="title">CAREERS</div>
      </div>
      <nav class="nav" aria-label="Primary">
        <a href="/">HOME</a>
        <a href="#">JOIN SBI</a>
        <a href="#">WHY SBI</a>
        <a href="#">LIFE AT THE SBI</a>
        <a href="#">THE SBI STORY</a>
      </nav>
      <button class="menu-btn" aria-label="Open Menu">☰</button>
      <a class="contact-btn" href="#">CONTACT US</a>
    </div>
  </header>

  <div class="wrapper">
    <div class="hero-row">
      <div>
        <div class="title">LOGIN</div>
        <p class="lead">Enter your credentials to continue.</p>
      </div>
      <div><a class="back-btn" href="javascript:history.back()">← BACK</a></div>
    </div>

    <!-- Example Login Form -->
    <form id="loginForm" class="login-form">
      <input type="text" placeholder="Username" required>
      <input type="password" placeholder="Password" required>
      <button type="submit">Login</button>
    </form>
  </div>

  <!-- Invalid Credentials Popup -->
  <div id="errorModal" class="modal">
    <div class="modal-content">
      <h2>Invalid Credentials</h2>
      <p>The username or password you entered is incorrect.</p>
      <button class="close-btn">OK</button>
    </div>
  </div>

  <div class="footer">© Careers Portal.</div>
</body>
</html>
