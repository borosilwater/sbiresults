<!doctype html>
<html lang="en">
<head>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <title>Careers · Recruitment Results</title>
  <link rel="stylesheet" href="/public/css/main.css">

  <style>
    /* Mobile Menu */
    .nav {
      display: flex;
      gap: 1rem;
    }

    .menu-btn {
      display: none;
      font-size: 1.5rem;
      background: none;
      border: none;
      cursor: pointer;
    }

    @media (max-width: 768px) {
      .nav {
        display: none;
        flex-direction: column;
        background: #fff;
        position: absolute;
        top: 60px;
        left: 0;
        right: 0;
        padding: 1rem;
        box-shadow: 0 4px 6px rgba(0,0,0,0.1);
      }
      .nav.active {
        display: flex;
      }
      .menu-btn {
        display: block;
      }
    }

    /* Popup Modal */
    .modal {
      display: none; 
      position: fixed;
      z-index: 9999;
      left: 0; top: 0;
      width: 100%; height: 100%;
      background: rgba(0,0,0,0.5);
      justify-content: center;
      align-items: center;
    }
    .modal-content {
      background: #fff;
      padding: 20px;
      border-radius: 10px;
      text-align: center;
      max-width: 300px;
      width: 90%;
      box-shadow: 0 5px 15px rgba(0,0,0,0.3);
    }
    .modal-content h2 {
      margin: 0 0 10px;
      font-size: 1.2rem;
      color: #d9534f;
    }
    .modal-content button {
      background: #d9534f;
      color: white;
      border: none;
      padding: 8px 16px;
      margin-top: 10px;
      border-radius: 5px;
      cursor: pointer;
    }
    .modal-content button:hover {
      background: #c9302c;
    }
  </style>

  <script>
    document.addEventListener("DOMContentLoaded", () => {
      const menuBtn = document.querySelector(".menu-btn");
      const nav = document.querySelector(".nav");
      const modal = document.getElementById("errorModal");
      const closeBtn = document.getElementById("closeModal");

      // Toggle Mobile Menu
      menuBtn.addEventListener("click", () => {
        nav.classList.toggle("active");
        menuBtn.setAttribute(
          "aria-label",
          nav.classList.contains("active") ? "Close Menu" : "Open Menu"
        );
      });

      // Fake example: Show modal on invalid credentials
      // Replace this with real login validation logic in backend
      document.querySelector("form")?.addEventListener("submit", (e) => {
        e.preventDefault(); // prevent actual submit
        // Example check
        const username = document.querySelector("#username")?.value || "";
        const password = document.querySelector("#password")?.value || "";
        if(username !== "admin" || password !== "admin123"){
          modal.style.display = "flex";
        }
      });

      // Close modal
      closeBtn.addEventListener("click", () => {
        modal.style.display = "none";
      });
    });
  </script>
</head>
<body>
  <header class="header">
    <div class="topbar">
      <div class="brand">
        <img src="/public/img/logo.svg" alt="SBI logo">
        <div class="title">CAREERS</div>
      </div>
      <nav class="nav" aria-label="Primary">
        <a href="/">HOME</a>
        <a href="#">JOIN SBI</a>
        <a href="#">WHY SBI</a>
        <a href="#">LIFE AT THE SBI</a>
        <a href="#">THE SBI STORY</a>
      </nav>
      <button class="menu-btn" aria-label="Open Menu">☰</button>
      <a class="contact-btn" href="#">CONTACT US</a>
    </div>
  </header>

  <div class="wrapper">
    <div class="hero-row">
      <div>
        <div class="title">RECRUITMENT RESULTS</div>
        <p class="lead">Candidates can check below for the results and announcements of all closed recruitment.</p>
      </div>
      <div><a class="back-btn" href="javascript:history.back()">← BACK</a></div>
    </div>

    <div class="filter" role="search">
      <select class="select" aria-label="Select Post">
        <option selected>SELECT POST</option>
        <option>Junior Associate</option>
      </select>
      <select class="select" aria-label="Select Department">
        <option selected>SELECT DEPARTMENT</option>
        <option>Customer Support & Sales</option>
      </select>
      <select class="select" aria-label="Select Year">
        <option selected>SELECT YEAR</option>
        <option>2025</option>
        <option>2024</option>
      </select>
      <div class="search">
        <input id="search" placeholder="Search" aria-label="Search ads">
      </div>
    </div>

    <% ads.forEach(ad => { %>
      <a href="/login?ad=<%= ad.id %>" class="ad-card ad-item" role="article">
        <strong><%= ad.title %></strong>
        <span class="note"><%= ad.note %></span>
        <div class="adv">ADVERTISEMENT NO: <%= ad.advertisementNo %></div>
      </a>
    <% }) %>
  </div>

  <div class="footer">© Careers Portal.</div>

  <!-- Modal -->
  <div id="errorModal" class="modal">
    <div class="modal-content">
      <h2>Invalid Credentials</h2>
      <p>Please check your username and password.</p>
      <button id="closeModal">OK</button>
    </div>
  </div>
</body>
</html>
